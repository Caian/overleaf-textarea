{
  "name": "Overleaf textarea",
  "version": "1.0",
  "description": "This plugin displays your text in a textarea so you can use spellcheck plugins like Grammarly.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent",
    "input"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.overleaf.com/*"],
      "js": [ "diff_match_patch.js","functions.js", "content.js", "script.js"],
      "content_security_policy": "script-src 'self' https://www.overleaf.com/project/*; object-src 'self'",
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["script.js"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    }
  },
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "manifest_version": 2
}
